<header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelp</h1>
      <p>View our Resturants</p>

      <p>
        <a class="btn btn-primary btn-lg" href="/restaurants/new">Add New Resturants</a>
      </p>
    </div>
</header>

<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3> Popular resturants</h3>
      </div>
    </div>

    <div class="row">
        {{#each restaurants}}
        <div class=" col-sm-12">            
          <div class="img-thumbnail rounded float-left">
            {{!-- <img src={{ resturants.image }}> --}}
            <div class="caption">
              <h4> {{ name }} </h4>
            </div>
          </div>    
        </div>
        {{/each}} 
    </div>
</div>




