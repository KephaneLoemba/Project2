<div class="row">
 
        <h4 id="restaurantN" class="col-12"></h4>
        <div class="img-thumbnail rounded float-right" style="height: 15%; width: 15%">
          <img id='restaurantImg' style="width: 100%; height: 100%">
        </div>
        
        <div id="reviewsContainer" class="col-12">

        </div>

</div>
<ul id="reviewsContainer" class="uk-comment-list">

</ul>
<div class="uk-margin-xlarge-top">
            <h1 class="uk-heading-divider" style="color: antiquewhite;">New Review</h1>
            <form class="uk-form-stacked uk-card uk-card-body uk-card-secondary" id="create-form">
                <fieldset class="uk-fieldset">
                    
                    <label class="uk-form-label uk-text-bold" for="form-stacked-text">Your name</label>
                    
                    <div class="uk-margin-bottom">
                        <input class="uk-input" type="text" placeholder="ex: John Doe" name="username" id="userName">
                    </div>
                    
                    <label class="uk-form-label" for="form-stacked-text">Title of comment</label>
                    
                    <div class="uk-margin-bottom">
                        <input class="uk-input" type="text" placeholder="ex: Excellent experience!" name="title" id="title">
                    </div>

                    
                    <div class="uk-margin-bottom">
                        <label class="uk-form-label" for="form-stacked-textarea">Comment</label>
                        <textarea class="uk-textarea" rows="5" placeholder="ex: This place was wonderful!" name="comment" id="comment"></textarea>
                    </div>
                    
                    
                    
                    
                    <label class="uk-form-label uk-text-bold" for="form-stacked-text"><span uk-icon="icon: star"></span> General Rating <span class="uk-text-lighter uk-text-italic">(Food, atmosphere, service)</span></label>
                    <div class="uk-margin-bottom" uk-grid>
                        
                        <input class="uk-range uk-width-5-6" type="range" value="5" min="1" max="5" step="1" id="generalSlider">
                        <div class="uk-width-expand uk-text-center">
                            <span class="uk-width-extend">
                                <span class="uk-text-large uk-text-warning uk-text-bolder" id="generalValue"></span>/5
                            </span>
                        </div>
                    </div>
                    <label class="uk-form-label uk-text-bold" for="form-stacked-text"><span uk-icon="icon: credit-card"></span> Affordability <span class="uk-text-lighter uk-text-italic">(Not worth the price ---> bang 4 buck)</span></label>
                    <div class="uk-margin-bottom" uk-grid>
                        <input class="uk-range uk-width-5-6" type="range" value="5" min="1" max="5" step="1" id="affordSlider">
                        <div class="uk-width-expand uk-text-center">
                            <span class="uk-width-extend">
                                <span class="uk-text-large uk-text-warning uk-text-bolder" id="affordValue"></span>/5
                            </span>
                        </div>
                    </div>
                    <label class="uk-form-label uk-text-bold" for="form-stacked-text"><span uk-icon="icon: users"></span> Busyness <span class="uk-text-lighter uk-text-italic">(Long wait (1h+) ---> Fast service (10min/less))</span></label>
                    <div class="uk-margin-bottom" uk-grid>
                        <input class="uk-range uk-width-5-6" type="range" value="5" min="1" max="5" step="1" id="busynessSlider">
                        <div class="uk-width-expand uk-text-center">
                            <span class="uk-width-extend">
                                <span class="uk-text-large uk-text-warning uk-text-bolder" id="busynessValue"></span>/5
                            </span>
                        </div>
                    </div>
                    <label class="uk-form-label uk-text-bold" for="form-stacked-text"><span uk-icon="icon: warning"></span> Cleanliness <span class="uk-text-lighter uk-text-italic">(Not Sanitary ---> Ultra Clean)</span></label>
                    <div class="uk-margin-bottom" uk-grid>
                        <input class="uk-range uk-width-5-6" type="range" value="5" min="1" max="5" step="1" id="cleanSlider">
                        <div class="uk-width-expand uk-text-center">
                            <span class="uk-width-extend">
                                <span class="uk-text-large uk-text-warning uk-text-bolder" id="cleanValue"></span>/5
                            </span>
                        </div>
                    </div>
                    <button class="uk-button uk-button-primary uk-align-center" type="submit">Submit</button>
                    
                    
                </fieldset>
            </form>
</div>




<script src="/assets/js/reviews.js"></script>

<script>
  // Client side JS

  const sliderG = document.getElementById("generalSlider");
  const outputG = document.getElementById("generalValue");
  outputG.innerHTML = sliderG.value; // Display the default slider value

  const sliderA = document.getElementById("affordSlider");
  const outputA = document.getElementById("affordValue");
  outputA.innerHTML = sliderA.value; // Display the default slider value

  const sliderB = document.getElementById("busynessSlider");
  const outputB = document.getElementById("busynessValue");
  outputB.innerHTML = sliderB.value; // Display the default slider value

  const sliderC = document.getElementById("cleanSlider");
  const outputC = document.getElementById("cleanValue");
  outputC.innerHTML = sliderC.value; // Display the default slider value


  // Update the current slider value (each time you drag the slider handle)
  sliderG.oninput = function() {
    outputG.innerHTML = sliderG.value;
  }
  sliderA.oninput = function() {
    outputA.innerHTML = this.value;
  }
  sliderB.oninput = function() {
    outputB.innerHTML = this.value;
  }
  sliderC.oninput = function() {
    outputC.innerHTML = this.value;
  }
</script>
